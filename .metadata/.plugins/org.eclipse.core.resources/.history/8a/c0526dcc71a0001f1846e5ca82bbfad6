package Races;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;

public class Halfelin extends Race{
	
	
	Halfelin()
	{
		this.setNomRace("Halfelin");
		this.setListModifs(new HashMap<>());
		this.getListModifs().put("Dextérité", 2);
		this.listCaracteristique.add(new Caracteristique("Augmentation de caractéristiques", "Votre valeur de Dextérité augmente de 2"));
		this.listCaracteristique.add(new Caracteristique("Âge", "Un halfelin atteint la maturité vers 20 ans et vit généralement 150 ans."));
		this.listCaracteristique.add(new Caracteristique("Alignement", "La majorité des halfelins est d'alignement Loyal Bon. Ce sont par nature des êtres qui ont bon coeur et qui sont gentils. Ils détestent voir les autres créatures souffrir et ne tolèrent pas l'oppression. Ils sont aussi très organisés et respectueux des traditions. Ils se reposent beaucoup sur leur communauté et le confort apporté par leurs traditions."));
		this.listCaracteristique.add(new Caracteristique("Taille", "D'une taille moyenne de 90 cm, les halfelins pèsent en moyenne 20 kilos. Ils sont de taille Petite."));
		this.listCaracteristique.add(new Caracteristique("Vitesse", "Votre vitesse de base au sol est de 7,50 mètres."));
		this.listCaracteristique.add(new Caracteristique("Chanceux", "Quand vous faites un 1 avec le d20 d'un jet d'attaque, d'un test de caractéristique ou d'un jet de sauvegarde, vous pouvez relancer le dé. Vous devez toutefois utiliser le nouveau résultat du jet."));
		this.listCaracteristique.add(new Caracteristique("Brave", "Vous êtes avantagé sur les jets de sauvegarde contre la terreur."));
		this.listCaracteristique.add(new Caracteristique("Agilité halfeline", "Vous pouvez traverser n'importe quel emplacement occupé par une créature d'au moins une catégorie de taille de plus que vous."));
		this.listCaracteristique.add(new Caracteristique("Langues", "Vous pouvez parler, lire et écrire le commun et le halfelin. Bien que la langue des halfelins n'ait rien d'un secret, ils n'aiment pas l'apprendre aux autres. Ils écrivent très peu et n'ont donc pas énormément de livres. Leur tradition orale est par contre très riche. Presque tous les halfelins parlent le commun, ce qui leur permet de converser avec les gens qui habitent sur les mêmes territoires qu'eux ou dont ils traversent les terres."));
	}

	public List<Caracteristique> getListCaracteristique() {
		return listCaracteristique;
	}

	public void setListCaracteristique(List<Caracteristique> listCaracteristique) {
		this.listCaracteristique = listCaracteristique;
	}

	
	

}
